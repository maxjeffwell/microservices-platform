# Platform Configuration
NODE_ENV=development
LOG_LEVEL=debug

# Auth Service
AUTH_SERVICE_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# User Service
USER_SERVICE_PORT=3002

# Notification Service
NOTIFICATION_SERVICE_PORT=3003
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@el-jefe.me
EMAIL_FROM_NAME=Portfolio Platform

# Media Service
MEDIA_SERVICE_PORT=3004
MINIO_ENDPOINT=minio
MINIO_PORT=9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=media

# Analytics Service
ANALYTICS_SERVICE_PORT=3005

# Search Service
SEARCH_SERVICE_PORT=3006
ELASTICSEARCH_URL=http://elasticsearch:9200

# PostgreSQL (Platform Databases)
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=platform
POSTGRES_PASSWORD=platform_password
POSTGRES_DB_AUTH=auth
POSTGRES_DB_USER=users
POSTGRES_DB_NOTIFICATION=notifications
POSTGRES_DB_MEDIA=media

# MongoDB (App Databases)
MONGODB_HOST=mongodb
MONGODB_PORT=27017
MONGODB_USER=platform
MONGODB_PASSWORD=platform_password
MONGODB_DB_STUDENTS=education_elly_students
MONGODB_DB_ASSESSMENTS=education_elly_assessments
MONGODB_DB_VOCABULARY=intervalai_vocabulary

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password

# RabbitMQ
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=platform
RABBITMQ_PASSWORD=rabbitmq_password
RABBITMQ_VHOST=/

# InfluxDB (Analytics)
INFLUXDB_URL=http://influxdb:8086
INFLUXDB_TOKEN=your-influxdb-token
INFLUXDB_ORG=portfolio-platform
INFLUXDB_BUCKET=analytics

# Service URLs (for inter-service communication)
AUTH_SERVICE_URL=http://auth-service:3001
USER_SERVICE_URL=http://user-service:3002
NOTIFICATION_SERVICE_URL=http://notification-service:3003
MEDIA_SERVICE_URL=http://media-service:3004
ANALYTICS_SERVICE_URL=http://analytics-service:3005
SEARCH_SERVICE_URL=http://search-service:3006

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
