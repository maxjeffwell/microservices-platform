# Platform Configuration
NODE_ENV=development
LOG_LEVEL=debug

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-secure
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Neon DB Connection Strings (PostgreSQL)
# Create separate databases in Neon for each service
# Format: postgresql://[user]:[password]@[endpoint]/[database]?sslmode=require
AUTH_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/auth?sslmode=require
USER_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/users?sslmode=require
NOTIFICATION_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/notifications?sslmode=require
MEDIA_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/media?sslmode=require
PROGRESS_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/education_elly_progress?sslmode=require
ROOMS_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/code_talk_rooms?sslmode=require
MESSAGES_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/code_talk_messages?sslmode=require
STORAGE_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/code_talk_storage?sslmode=require
BOOKMARKS_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/firebook_bookmarks?sslmode=require
COLLECTIONS_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/firebook_collections?sslmode=require
REVIEWS_DATABASE_URL=postgresql://user:password@ep-xxx.neon.tech/intervalai_reviews?sslmode=require

# MongoDB (Local Docker)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=platform
MONGODB_PASSWORD=platform_password
# MongoDB Connection Strings for each database
MONGODB_STUDENTS_URL=mongodb://platform:platform_password@localhost:27017/education_elly_students
MONGODB_ASSESSMENTS_URL=mongodb://platform:platform_password@localhost:27017/education_elly_assessments
MONGODB_VOCABULARY_URL=mongodb://platform:platform_password@localhost:27017/intervalai_vocabulary

# Redis (Local Docker)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_URL=redis://:redis_password@localhost:6379

# Auth Service
AUTH_SERVICE_PORT=3001
AUTH_SERVICE_URL=http://localhost:3001

# User Service
USER_SERVICE_PORT=3002
USER_SERVICE_URL=http://localhost:3002

# Notification Service
NOTIFICATION_SERVICE_PORT=3003
NOTIFICATION_SERVICE_URL=http://localhost:3003
SENDGRID_API_KEY=your-sendgrid-api-key
EMAIL_FROM=noreply@el-jefe.me
EMAIL_FROM_NAME=Portfolio Platform

# Media Service
MEDIA_SERVICE_PORT=3004
MEDIA_SERVICE_URL=http://localhost:3004

# Object Storage (Cloudflare R2, AWS S3, etc.)
STORAGE_PROVIDER=cloudflare-r2
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_BUCKET=media
STORAGE_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
STORAGE_PUBLIC_URL=https://your-public-domain.com

# Analytics Service
ANALYTICS_SERVICE_PORT=3005
ANALYTICS_SERVICE_URL=http://localhost:3005

# InfluxDB (Time-series Database for Analytics)
INFLUXDB_URL=http://localhost:8086
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_ORG=microservices-platform
INFLUXDB_BUCKET=analytics

# Kafka (Event Streaming)
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=analytics-service
KAFKA_GROUP_ID=analytics-service-group
KAFKA_EVENTS_TOPIC=analytics.events

# Search Service (Optional - add when building)
SEARCH_SERVICE_PORT=3006
SEARCH_SERVICE_URL=http://localhost:3006
ALGOLIA_APP_ID=your-algolia-app-id
ALGOLIA_API_KEY=your-algolia-api-key
ALGOLIA_INDEX_PREFIX=platform_

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3002,http://localhost:3003,http://localhost:3004

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Feature Flags (Optional)
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_ANALYTICS=true
ENABLE_SEARCH=false
